extends layout

block content
  h1= title
  p Query Rows: #{query.rows}
  p Query Cols: #{query.cols}

  - let rows = Number(query.rows)
  - let cols = Number(query.cols)

  - if (!Number.isInteger(rows) || !Number.isInteger(cols))
    p Invalid rows or cols: Not an integer
  - else if (rows < 1 || rows > 10)
    p Rows out of range: Must be between 1 and 10
  - else if (cols < 1 || cols > 10)
    p Cols out of range: Must be between 1 and 10
  - else
    table#outer
      - for (let i = 0; i < rows; i++)
          tr#middle
            - for (let j = 0; j < cols; j++)
                - if(i==j)
                    span 1
                - else if(i==j+1) 
                    span 2
                - else if(j==i+1)
                    span #{i}
                - else
                    span 0
            br
